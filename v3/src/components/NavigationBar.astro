<div
  id="main-head"
  class="main-head relative z-10 flex items-center justify-between bg-white"
>
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between p-4 border-b border-gray-300">
      <img
        src="https://picsum.photos/200"
        alt=""
        class="h-16 w-32 rounded-md bg-white object-cover p-2 shadow"
      />

      <!-- Desktop Navigation -->
      <nav
        class="hidden md:flex md:items-center md:justify-center md:gap-4 [&>a]:no-underline"
      >
        <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
        <a href="/about" class="text-gray-600 hover:text-gray-900">About</a>
        <a href="/services" class="text-gray-600 hover:text-gray-900"
          >Services</a
        >
        <a href="/case-studies" class="text-gray-600 hover:text-gray-900"
          >Case Studies</a
        >
        <a
          href="/contact"
          class="rounded-full bg-gradient-to-t from-amber-400 to-red-600 px-6 py-3 text-white transition hover:scale-110"
        >
          Contact
          <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="menu-toggle"
        class="z-50 block text-gray-600 focus:outline-none md:hidden"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>

      <!-- Mobile Fullscreen Menu -->
      <div
        id="nav-links"
        class="fixed top-0 left-0 z-[9999] hidden h-screen w-full bg-white p-4 transition-all duration-300 md:hidden"
      >
        <button
          id="menu-close"
          class="absolute top-4 right-4 text-6xl text-gray-600 hover:text-gray-900 focus:outline-none"
        >
          &times;
        </button>
        <div class="flex h-full flex-col items-center justify-center">
          <div class="flex flex-col gap-4 text-center">
            <!-- Close Button -->
            <a href="/" class="block text-xl text-gray-600 hover:text-gray-900"
              >Home</a
            >
            <a
              href="/about"
              class="block text-xl text-gray-600 hover:text-gray-900">About</a
            >
            <a
              href="/services"
              class="block text-xl text-gray-600 hover:text-gray-900"
              >Services</a
            >
            <a
              href="/case-studies"
              class="block text-xl text-gray-600 hover:text-gray-900"
              >Case Studies</a
            >
            <a
              href="/contact"
              class="block rounded-full bg-gradient-to-t from-amber-400 to-red-600 px-6 py-3 text-white transition hover:scale-110"
            >
              Contact
              <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const mainHead = document.getElementById("main-head");

  let lastScrollY = window.scrollY;

  window.addEventListener("scroll", () => {
    if (window.scrollY < 100) {
      mainHead.classList.remove("slideup");
      mainHead.classList.add("slidedown");
    } else {
      mainHead.classList.remove("slidedown");
      mainHead.classList.add("slideup");
    }

    lastScrollY = window.scrollY;
  });

  const menuToggle = document.getElementById("menu-toggle");
  const menuClose = document.getElementById("menu-close");
  const navLinks = document.getElementById("nav-links");

  menuToggle.addEventListener("click", () => {
    navLinks.classList.remove("hidden");
    document.body.classList.add("overflow-hidden");
  });

  menuClose.addEventListener("click", () => {
    navLinks.classList.add("hidden");
    document.body.classList.remove("overflow-hidden");
  });
</script>
