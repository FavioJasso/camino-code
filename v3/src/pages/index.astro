---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const title = "About Us - My Astro Site";
const description = "Learn more about our company and what we do.";
---

<Layout title={title} description={description}>
  <main class="flex h-screen w-screen items-center justify-center bg-white">
    <!-- Loading Spinner -->
    <div class="flex flex-col items-center space-y-4">
      <div
        class="h-12 w-12 animate-spin rounded-full border-4 border-red-500 border-t-transparent"
      >
      </div>
      <p class="text-lg text-gray-700">Loading...</p>
    </div>
  </main>

  <script>
    setTimeout(() => {
      window.location.href = "/landing";
    }, 2000); // 2000ms = 2 seconds
  </script>
</Layout>
