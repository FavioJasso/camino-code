---
import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/NavigationBar.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";
import AboutUsHeader from "../components/AboutUsHeader.astro";
import AboutUsHero from "../components/AboutUsHero.astro";
import AboutUsOffers from "../components/AboutUsOffers.astro";
import AboutUsPartners from "../components/AboutUsPartners.astro";
import "../styles/global.css";

const title = "About Us - My Astro Site";
const description = "Learn more about our company and what we do.";
---

<Layout title={title} description={description}>
  <main class="container mx-auto">
    <NavigationBar />
    <AboutUsHeader />
    <AboutUsHero />
    <AboutUsOffers />
    <AboutUsPartners />
    <ContactForm />
    <Footer />
  </main>
</Layout>
