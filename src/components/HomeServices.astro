---
import imgBg from "../assets/images/landing-bg1.png";
---

<section
  id="services"
  class="relative flex h-auto flex-col items-start justify-around overflow-hidden px-36 py-20 text-center text-sm sm:px-8 sm:text-base md:flex-row md:px-10 md:text-lg"
>
  <img
    src={imgBg.src}
    alt="Background"
    class="absolute inset-0 -z-10 h-full w-full object-cover"
  />
  <div
    class="flex w-full flex-col items-start p-4 text-center text-white md:w-1/2 md:text-left"
  >
    <h2
      class="w-full text-3xl font-bold uppercase sm:text-4xl md:max-w-2xl md:pb-12 md:text-[4rem] lg:text-[6rem]"
    >
      Our
      <span
        class="inline-block bg-gradient-to-r from-amber-400 to-red-600 bg-clip-text text-transparent"
        >Services</span
      >
    </h2>
    <p class="text-xs sm:text-sm md:text-base lg:text-lg">
      At Camino Code, we provide cutting-edge solutions in data science and web
      development to help businesses unlock new opportunities and drive growth.
    </p>
  </div>

  <!-- Services Column -->
  <div
    class="flex w-full flex-col items-start gap-4 text-left text-white md:w-1/2 [&>div]:flex [&>div]:w-full [&>div]:flex-col [&>div]:items-center [&>div]:justify-center [&>div]:gap-4 [&>div]:rounded-lg [&>div]:border [&>div]:border-gray-300 [&>div]:bg-black [&>div]:p-6"
  >
    <!-- Data Science Card -->
    <div class="group rounded-xl p-4 transition duration-300">
      <div class="flex w-full items-center justify-between gap-4">
        <h3
          class="text-base font-bold transition duration-300 sm:text-lg md:text-xl lg:text-2xl"
        >
          Data Science
        </h3>
        <i
          class="fa-solid fa-layer-group bg-gradient-to-b from-[#f86a1a] to-[#e74c3c] bg-clip-text text-2xl text-transparent transition duration-300 sm:text-3xl md:text-4xl"
        ></i>
      </div>
      <ul
        class="w-4/5 list-inside list-disc text-xs transition duration-300 sm:text-sm md:text-base"
      >
        <li>Predictive Analytics</li>
        <li>Machine Learning Models</li>
        <li>Big Data Solutions</li>
      </ul>
    </div>

    <!-- Software Development Card -->
    <div class="group rounded-xl p-4 transition duration-300">
      <div class="flex w-full items-center justify-between gap-4">
        <h3
          class="text-base font-bold transition duration-300 sm:text-lg md:text-xl lg:text-2xl"
        >
          Software Development
        </h3>
        <i
          class="fa-solid fa-laptop bg-gradient-to-b from-[#f86a1a] to-[#e74c3c] bg-clip-text text-2xl text-transparent transition duration-300 sm:text-3xl md:text-4xl"
        ></i>
      </div>
      <ul
        class="w-4/5 list-inside list-disc text-xs transition duration-300 sm:text-sm md:text-base"
      >
        <li>Custom Web Applications</li>
        <li>Scalable Architecture</li>
        <li>Performance Optimization</li>
      </ul>
    </div>

    <!-- Automated Solutions Card -->
    <div class="group rounded-xl p-4 transition duration-300">
      <div class="flex w-full items-center justify-between gap-4">
        <h3
          class="text-base font-bold transition duration-300 sm:text-lg md:text-xl lg:text-2xl"
        >
          Automated Solutions
        </h3>
        <i
          class="fa-solid fa-microchip bg-gradient-to-b from-[#f86a1a] to-[#e74c3c] bg-clip-text text-2xl text-transparent transition duration-300 sm:text-3xl md:text-4xl"
        ></i>
      </div>
      <ul
        class="w-4/5 list-inside list-disc text-xs transition duration-300 sm:text-sm md:text-base"
      >
        <li>Natural Language Processing</li>
        <li>AI-Driven Insights</li>
      </ul>
    </div>

    <!-- CTA Button -->
    <span class="flex w-full justify-center border-none md:justify-start">
      <a
        href="#"
        class="w-full rounded-full bg-gradient-to-t from-amber-400 to-red-600 px-6 py-3 text-center text-xs text-white transition sm:text-sm md:w-auto md:text-base lg:text-lg"
      >
        See All
        <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
      </a>
    </span>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll("#services .group");
    let currentIndex = 0;

    function activateCard(index) {
      // Remove active classes and reset progress bars
      cards.forEach((card) => {
        card.classList.remove(
          "bg-gradient-to-t",
          "from-amber-400",
          "to-red-600",
          "text-white"
        );
        card.querySelector("h3")?.classList.remove("text-white");
        card.querySelector("ul")?.classList.remove("text-white");
        card.querySelector("i")?.classList.remove("!text-white", "text-white");
      });

      // Activate current card
      const currentCard = cards[index];
      currentCard.classList.add(
        "bg-gradient-to-t",
        "from-amber-400",
        "to-red-600",
        "text-white"
      );
      currentCard.querySelector("h3")?.classList.add("text-white");
      currentCard.querySelector("ul")?.classList.add("text-white");
      currentCard
        .querySelector("i")
        ?.classList.add("!text-white", "text-white");

      // Schedule next card
      setTimeout(() => {
        currentIndex = (currentIndex + 1) % cards.length;
        activateCard(currentIndex);
      }, 10000); // 10 seconds per card
    }

    // Start with delay
    setTimeout(() => {
      activateCard(currentIndex);
    }, 1000);
  });
</script>
