---
import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/NavigationBar.astro";
import ContactUsHeader from "../components/ContactUsHeader.astro";
import ContactUsForm from "../components/ContactUsForm.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const title = "Contact Us - My Astro Site";
const description = "Get in touch with us for any inquiries or support.";
---

<Layout title={title} description={description}>
  <main class="container mx-auto">
    <NavigationBar />
    <ContactUsHeader />
    <hr class="my-20 w-full border-gray-700" />
    <ContactUsForm />
    <hr class="my-20 w-full border-gray-700" />
    <Footer />
  </main>
</Layout>
