---
import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/NavigationBar.astro";
import HeroSection from "../components/HeroSection.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";
import AboutUsPartners from "../components/AboutUsPartners.astro";
import "../styles/global.css";
import HomeAbout from "../components/HomeAbout.astro";
import AboutUsOffers from "../components/AboutUsOffers.astro";
import HomeServices from "../components/HomeServices.astro";
import Work from "../components/Work.astro";
import Testimonials from "../components/Testimonials.astro";

const title = "Welcome to My Astro Site";
const description = "This is my first page built with Astro!";
---

<Layout title={title} description={description}>
  <main class="container mx-auto border">
    <NavigationBar />
    <HeroSection />
    <AboutUsPartners />
    <HomeAbout />
    <AboutUsOffers />
    <HomeServices />
    <Work />
    <Testimonials />
    <ContactForm />
    <Footer />
  </main>
</Layout>
