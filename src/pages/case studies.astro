---
import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/NavigationBar.astro";
import ContactForm from "../components/ContactForm.astro";
import CaseStudiesHeader from "../components/CaseStudiesHeader.astro";
import Work from "../components/Work.astro";
import Testimonials from "../components/Testimonials.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const title = "Case Studies - My Astro Site";
const description =
  "Explore our case studies to see how we solve real-world problems.";
---

<Layout title={title} description={description}>
  <main class="container mx-auto border">
    <NavigationBar />
    <CaseStudiesHeader />
    <Work />
    <Testimonials />
    <ContactForm />
    <Footer />
  </main>
</Layout>
