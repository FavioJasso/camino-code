<section
  class="text-center h-auto flex flex-col md:flex-row items-center justify-left py-20 px-4 md:px-10 text-sm sm:text-base md:text-lg"
>
  <div
    class="bg-white rounded-lg flex flex-col gap-6 text-center md:text-left mb-10 md:mb-0 md:mr-10"
  >
    <h2
      class="font-bold uppercase text-3xl sm:text-5xl md:text-[4rem] lg:text-[6rem] leading-tight"
    >
      Get in
      <span
        class="bg-gradient-to-r from-amber-400 to-red-600 inline-block text-transparent bg-clip-text"
        >Touch</span
      >
    </h2>
    <p class="text-orange-500 text-sm sm:text-base md:text-lg">
      some@gmail.com
    </p>
  </div>

  <div
    class="bg-white rounded-lg flex flex-col w-full gap-6 items-center text-sm sm:text-base md:text-lg"
  >
    <div class="flex flex-col md:flex-row gap-4 text-left w-full">
      <div class="w-full">
        <label
          for="name"
          class="block text-gray-700 font-medium text-sm sm:text-base md:text-lg"
        >
          Full Name *
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="form-input w-full mt-1 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm sm:text-base md:text-lg"
        />
      </div>
      <div class="w-full">
        <label
          for="email"
          class="block text-gray-700 font-medium text-sm sm:text-base md:text-lg"
        >
          Email *
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="form-input w-full mt-1 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm sm:text-base md:text-lg"
        />
      </div>
    </div>

    <div class="flex flex-col gap-2 w-full text-left">
      <label
        for="message"
        class="block text-gray-700 font-medium text-sm sm:text-base md:text-lg"
      >
        Message
      </label>
      <textarea
        id="message"
        name="message"
        rows="3"
        class="w-full mt-1 px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm sm:text-base md:text-lg"
      ></textarea>
    </div>

    <button
      type="submit"
      class="px-6 py-3 w-min bg-gradient-to-t from-amber-400 to-red-600 text-white text-sm sm:text-base md:text-lg rounded-full hover:scale-110 transition flex items-center"
    >
      Submit
      <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
    </button>
  </div>
</section>
